<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="devexchanges.info.androidpopupmessages.MainActivity">

    <Button
        android:id="@+id/btn_single"
        android:text="Show AlertDialog with Single Button"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_multiple"
        android:text="Show AlertDialog with 2 Buttons"
        android:layout_width="match_parent"
        android:layout_above="@+id/btn_single"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_3_alert"
        android:text="Show AlertDialog with 3 Buttons"
        android:layout_width="match_parent"
        android:layout_below="@+id/btn_single"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_toast"
        android:text="Show Toast Popup"
        android:layout_width="match_parent"
        android:layout_below="@+id/btn_3_alert"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
